@page "/services"
@inject HttpClient Http
@using ETechEnergie.Shared.Models

<PageTitle>Nos Services - e-Tech Energie+</PageTitle>

<div class="page-header">
    <div class="container">
        <h1>Nos Services</h1>
        <p>Des solutions complètes pour tous vos besoins techniques et énergétiques</p>
    </div>
</div>

<section class="services-section">
    <div class="container">
        @if (services == null)
        {
            <div class="loading">
                <i class="fas fa-spinner fa-spin"></i>
                <p>Chargement des services...</p>
            </div>
        }
        else if (!services.Any())
        {
            <p class="no-data">Aucun service disponible pour le moment.</p>
        }
        else
        {
            <div class="services-list">
                @foreach (var service in services)
                {
                    <div class="service-detail-card">
                        <div class="service-header">
                            <div class="service-icon-large">
                                <i class="fas @service.IconClass"></i>
                            </div>
                            <h2>@service.Name</h2>
                        </div>
                        <div class="service-body">
                            <p class="service-description">@service.Description</p>
                            <div class="service-detailed">
                                @service.DetailedDescription
                            </div>
                            <div class="service-actions">
                                <a href="/contact" class="btn btn-primary">
                                    <i class="fas fa-envelope"></i> Demander un devis
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<section class="cta-services">
    <div class="container">
        <h2>Besoin d'un Service Personnalisé ?</h2>
        <p>Notre équipe est à votre disposition pour étudier vos besoins spécifiques</p>
        <a href="/contact" class="btn btn-light btn-lg">Contactez-nous</a>
    </div>
</section>

@code {
    private Service[]? services;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            services = await Http.GetFromJsonAsync<Service[]>("api/services");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur: {ex.Message}");
        }
    }
}

