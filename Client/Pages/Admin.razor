@page "/admin/products"
@inject HttpClient Http
@inject NotificationService NotificationService
@inject IJSRuntime JS
@using ETechEnergie.Shared.Models
@using ETechEnergie.Client.Services
@using System.Net.Http.Json

<PageTitle>Administration - Produits</PageTitle>

<div class="admin-header">
    <div class="container">
        <h1><i class="fas fa-cog"></i> Gestion des Produits</h1>
    </div>
</div>

<div class="admin-container">
    <div class="admin-actions">
        <button class="btn btn-add" @onclick="ShowAddForm">
            <i class="fas fa-plus"></i> Ajouter un Produit
        </button>
    </div>

    @if (showForm)
    {
        <div class="product-form-card">
            <div class="form-header">
                <h2>@(editingProduct?.Id > 0 ? "Modifier" : "Nouveau") Produit</h2>
                <button class="btn-close" @onclick="CloseForm">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <EditForm Model="@editingProduct" OnValidSubmit="SaveProduct">
                <DataAnnotationsValidator />

                <div class="form-row">
                    <div class="form-group">
                        <label>Nom du produit *</label>
                        <InputText class="form-control" @bind-Value="editingProduct!.Name" />
                        <ValidationMessage For="@(() => editingProduct.Name)" />
                    </div>

                    <div class="form-group">
                        <label>Prix (FCFA) *</label>
                        <InputNumber class="form-control" @bind-Value="editingProduct.Price" />
                        <ValidationMessage For="@(() => editingProduct.Price)" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Catégorie *</label>
                        <InputSelect class="form-control" @bind-Value="editingProduct.CategoryId">
                            <option value="0">-- Sélectionner --</option>
                            @if (categories != null)
                            {
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => editingProduct.CategoryId)" />
                    </div>

                    <div class="form-group">
                        <label>Stock *</label>
                        <InputNumber class="form-control" @bind-Value="editingProduct.Stock" />
                        <ValidationMessage For="@(() => editingProduct.Stock)" />
                    </div>
                </div>

                <div class="form-group">
                    <label>Description *</label>
                    <InputTextArea class="form-control" @bind-Value="editingProduct.Description" rows="3" />
                    <ValidationMessage For="@(() => editingProduct.Description)" />
                </div>

                <div class="form-group">
                    <label>Image du produit</label>
                    <div class="image-upload-container">
                        <InputFile OnChange="HandleImageSelected" class="file-input" id="imageUpload" accept="image/*" />
                        <label for="imageUpload" class="file-label">
                            <i class="fas fa-cloud-upload-alt"></i>
                            Choisir une image
                        </label>
                        
                        @if (isUploadingImage)
                        {
                            <div class="upload-progress">
                                <i class="fas fa-spinner fa-spin"></i> Upload en cours...
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(editingProduct.ImageUrl))
                        {
                            <div class="image-preview">
                                <img src="@editingProduct.ImageUrl" alt="Aperçu" />
                                <button type="button" class="btn-remove-image" @onclick="RemoveImage">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        }
                    </div>
                    <small class="form-hint">Ou entrez une URL d'image</small>
                    <InputText class="form-control" @bind-Value="editingProduct.ImageUrl" placeholder="https://exemple.com/image.jpg" />
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <InputCheckbox @bind-Value="editingProduct.IsAvailable" />
                        Disponible à la vente
                    </label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-save" disabled="@(isSaving || isUploadingImage)">
                        @if (isSaving)
                        {
                            <i class="fas fa-spinner fa-spin"></i>
                        }
                        else
                        {
                            <i class="fas fa-save"></i>
                        }
                        Enregistrer
                    </button>
                    <button type="button" class="btn btn-cancel" @onclick="CloseForm">
                        Annuler
                    </button>
                </div>
            </EditForm>
        </div>
    }

    <div class="products-table-card">
        @if (products == null)
        {
            <div class="loading"><i class="fas fa-spinner fa-spin"></i> Chargement...</div>
        }
        else if (!products.Any())
        {
            <p class="no-data">Aucun produit enregistré.</p>
        }
        else
        {
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Catégorie</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products)
                    {
                        <tr>
                            <td>
                                <div class="product-thumb">
                                    <img src="@product.ImageUrl" alt="@product.Name" />
                                </div>
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Category?.Name</td>
                            <td>@product.Price.ToString("N0") FCFA</td>
                            <td>
                                <span class="stock-badge @(product.Stock <= 5 ? "low" : "")">
                                    @product.Stock
                                </span>
                            </td>
                            <td>
                                <span class="status-badge @(product.IsAvailable ? "active" : "")">
                                    @(product.IsAvailable ? "Disponible" : "Indisponible")
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-icon btn-edit" @onclick="() => EditProduct(product)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-icon btn-delete" @onclick="() => DeleteProduct(product.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@code {
    private Product[]? products;
    private Category[]? categories;
    private Product editingProduct = new();
    private bool showForm = false;
    private bool isSaving = false;
    private bool isUploadingImage = false;
    private const long MaxFileSize = 5 * 1024 * 1024; // 5 MB

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        products = await Http.GetFromJsonAsync<Product[]>("api/products");
        categories = await Http.GetFromJsonAsync<Category[]>("api/categories");
    }

    private void ShowAddForm()
    {
        editingProduct = new Product { IsAvailable = true };
        showForm = true;
    }

    private void EditProduct(Product product)
    {
        editingProduct = new Product
        {
            Id = product.Id,
            Name = product.Name,
            Description = product.Description,
            Price = product.Price,
            ImageUrl = product.ImageUrl,
            CategoryId = product.CategoryId,
            Stock = product.Stock,
            IsAvailable = product.IsAvailable
        };
        showForm = true;
    }

    private void CloseForm()
    {
        showForm = false;
        editingProduct = new();
    }

    private async Task HandleImageSelected(InputFileChangeEventArgs e)
    {
        isUploadingImage = true;
        try
        {
            var file = e.File;
            
            // Vérifier la taille du fichier
            if (file.Size > MaxFileSize)
            {
                NotificationService.ShowError("L'image est trop volumineuse. Maximum 5 MB.");
                return;
            }

            // Vérifier le type de fichier
            if (!file.ContentType.StartsWith("image/"))
            {
                NotificationService.ShowError("Veuillez sélectionner une image valide.");
                return;
            }

            // Créer le contenu multipart
            var content = new MultipartFormDataContent();
            var fileContent = new StreamContent(file.OpenReadStream(MaxFileSize));
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(file.ContentType);
            content.Add(fileContent, "file", file.Name);

            // Envoyer au serveur
            var response = await Http.PostAsync("api/products/upload-image", content);

            if (response.IsSuccessStatusCode)
            {
                var imageUrl = await response.Content.ReadAsStringAsync();
                editingProduct.ImageUrl = imageUrl.Trim('"'); // Enlever les guillemets si présents
                NotificationService.ShowSuccess("Image téléchargée avec succès!");
            }
            else
            {
                NotificationService.ShowError("Erreur lors du téléchargement de l'image.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Erreur: {ex.Message}");
        }
        finally
        {
            isUploadingImage = false;
        }
    }

    private void RemoveImage()
    {
        editingProduct.ImageUrl = string.Empty;
    }

    private async Task SaveProduct()
    {
        isSaving = true;
        try
        {
            HttpResponseMessage response;
            
            if (editingProduct.Id > 0)
            {
                response = await Http.PutAsJsonAsync($"api/products/{editingProduct.Id}", editingProduct);
            }
            else
            {
                response = await Http.PostAsJsonAsync("api/products", editingProduct);
            }

            if (response.IsSuccessStatusCode)
            {
                NotificationService.ShowSuccess("Produit enregistré avec succès!");
                await LoadData();
                CloseForm();
            }
            else
            {
                NotificationService.ShowError("Erreur lors de l'enregistrement.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Erreur: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteProduct(int id)
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm", "Voulez-vous vraiment supprimer ce produit?");
        if (confirm)
        {
            try
            {
                var response = await Http.DeleteAsync($"api/products/{id}");
                if (response.IsSuccessStatusCode)
                {
                    NotificationService.ShowSuccess("Produit supprimé!");
                    await LoadData();
                }
            }
            catch (Exception ex)
            {
                NotificationService.ShowError($"Erreur: {ex.Message}");
            }
        }
    }
}

