@page "/"
@inject HttpClient Http
@inject NavigationManager Navigation
@using ETechEnergie.Shared.Models

<PageTitle>e-Tech Energie+ | L'expertise technique et énergétique au service de Thiès</PageTitle>

<section class="hero">
    <div class="hero-content">
        <h1>e-Tech Energie+</h1>
        <p class="tagline">L'expertise technique et énergétique au service de Thiès</p>
        <p class="subtitle">Performance, fiabilité et évolutivité des solutions technologiques pour votre entreprise</p>
        <div class="hero-actions">
            <a href="/services" class="btn btn-primary">Nos Services</a>
            <a href="/contact" class="btn btn-secondary">Contactez-nous</a>
        </div>
    </div>
</section>

<section class="services-preview">
    <div class="container">
        <h2>Nos Domaines d'Expertise</h2>
        <div class="services-grid">
            @if (services == null)
            {
                <p><em>Chargement des services...</em></p>
            }
            else
            {
                @foreach (var service in services.Take(4))
                {
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas @service.IconClass"></i>
                        </div>
                        <h3>@service.Name</h3>
                        <p>@service.Description</p>
                    </div>
                }
            }
        </div>
        <div class="text-center mt-4">
            <a href="/services" class="btn btn-outline">Voir tous nos services</a>
        </div>
    </div>
</section>

<section class="why-choose-us">
    <div class="container">
        <h2>Pourquoi Choisir e-Tech Energie+ ?</h2>
        <div class="features-grid">
            <div class="feature">
                <i class="fas fa-certificate"></i>
                <h3>Expertise Reconnue</h3>
                <p>Des techniciens qualifiés et expérimentés dans tous les domaines techniques</p>
            </div>
            <div class="feature">
                <i class="fas fa-shield-alt"></i>
                <h3>Qualité Garantie</h3>
                <p>Respect des normes internationales et garantie sur tous nos travaux</p>
            </div>
            <div class="feature">
                <i class="fas fa-leaf"></i>
                <h3>Solutions Écologiques</h3>
                <p>Engagement pour les énergies renouvelables et le développement durable</p>
            </div>
            <div class="feature">
                <i class="fas fa-headset"></i>
                <h3>Support 24/7</h3>
                <p>Une équipe à votre écoute pour tous vos besoins techniques</p>
            </div>
        </div>
    </div>
</section>

<section class="cta-section">
    <div class="container">
        <h2>Prêt à Démarrer Votre Projet ?</h2>
        <p>Contactez-nous dès aujourd'hui pour une consultation gratuite</p>
        <a href="/contact" class="btn btn-primary btn-lg">Demander un Devis</a>
    </div>
</section>

@code {
    private Service[]? services;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            services = await Http.GetFromJsonAsync<Service[]>("api/services");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors du chargement des services: {ex.Message}");
        }
    }
}

