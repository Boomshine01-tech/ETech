@page "/products"
@inject HttpClient Http
@inject CartService CartService
@inject NotificationService NotificationService
@using ETechEnergie.Shared.Models
@using ETechEnergie.Client.Services

<PageTitle>Nos Produits - e-Tech Energie+</PageTitle>

<div class="page-header">
    <div class="container">
        <h1>Nos Produits</h1>
        <p>Équipements électroniques et informatiques de qualité professionnelle</p>
    </div>
</div>

<section class="products-section">
    <div class="container">
        <div class="products-toolbar">
            <div class="filter-section">
                <label for="category-filter">Filtrer par catégorie:</label>
                <select id="category-filter" @onchange="FilterByCategory" class="category-select">
                    <option value="">Toutes les catégories</option>
                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="cart-info">
                <a href="/cart" class="cart-link">
                    <i class="fas fa-shopping-cart"></i>
                    Panier (@CartService.ItemCount)
                </a>
            </div>
        </div>

        @if (filteredProducts == null)
        {
            <div class="loading">
                <i class="fas fa-spinner fa-spin"></i>
                <p>Chargement des produits...</p>
            </div>
        }
        else if (!filteredProducts.Any())
        {
            <p class="no-data">Aucun produit disponible dans cette catégorie.</p>
        }
        else
        {
            <div class="products-grid">
                @foreach (var product in filteredProducts)
                {
                    <div class="product-card">
                        <div class="product-image">
                            <img src="@product.ImageUrl" alt="@product.Name" />
                            @if (product.Stock <= 5)
                            {
                                <span class="stock-badge low">Stock faible</span>
                            }
                        </div>
                        <div class="product-info">
                            <span class="product-category">@product.Category?.Name</span>
                            <h3>@product.Name</h3>
                            <p class="product-description">@product.Description</p>
                            <div class="product-footer">
                                <span class="product-price">@product.Price.ToString("N0") FCFA</span>
                                @if (product.Stock > 0)
                                {
                                    <button class="btn btn-add-cart" @onclick="() => AddToCart(product)">
                                        <i class="fas fa-cart-plus"></i> Ajouter
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-disabled" disabled>
                                        Rupture de stock
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@code {
    private Product[]? products;
    private Category[]? categories;
    private Product[]? filteredProducts;
    private int? selectedCategoryId;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            products = await Http.GetFromJsonAsync<Product[]>("api/products");
            categories = await Http.GetFromJsonAsync<Category[]>("api/categories");
            filteredProducts = products;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur: {ex.Message}");
        }
    }

    private void FilterByCategory(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        
        if (string.IsNullOrEmpty(value))
        {
            filteredProducts = products;
        }
        else if (int.TryParse(value, out int categoryId))
        {
            filteredProducts = products?.Where(p => p.CategoryId == categoryId).ToArray();
        }
    }

    private void AddToCart(Product product)
    {
        CartService.AddToCart(product);
        NotificationService.ShowSuccess($"{product.Name} ajouté au panier");
    }
}

